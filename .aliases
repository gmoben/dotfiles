# Vagrant
vagrant() {
    if [[ $1 == "remake" ]]; then
        shift $((2 > $# ? $# : 2))
        command vagrant destroy -f "$@" && vagrant up "$@" && vagrant ssh "$@"
    else
        command vagrant "$@"
    fi
}

