kgpl() {
    if [[ $# = 1 ]]; then
        index=*
        selector=$@
    elif [[ $# = 2 && $2 =~ ^[0-9]+$ ]]; then
        index=$2
        selector=${@:1:1}
    else
        echo "Usage: kgpl [label_selector] ([pod index])"
        exit 1
    fi

    command kubectl get pods -o=jsonpath="{.items[${index}].metadata.name}" -l $selector
}

kllabel() {
    if [[ $# = 1 ]]; then
        args=$@
        args+=(0)
    else
        args=$@
    fi
    command kubectl logs `kgpl ${args}`
}

klfl() {
    if [[ $# = 1 ]]; then
        args=$@
        args+=(0)
    else
        args=$@
    fi
    command kubectl logs --follow `kgpl ${args}`
}

