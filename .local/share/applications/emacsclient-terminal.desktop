[Desktop Entry]
Name=Emacs Client (Terminal)
GenericName=Text Editor
Comment=Edit file with emacsclient in terminal
MimeType=text/plain;text/x-csrc;text/x-chdr;text/x-c++src;text/x-c++hdr;text/x-java;text/x-python;text/x-shellscript;text/x-script.python;text/xml;application/json;application/javascript;application/x-shellscript;application/x-yaml;application/toml;
Exec=sh -c 'TERM=xterm-24bit COLORTERM=xterm-24bit emacsclient -t "$1" || { echo ""; echo "emacsclient failed. Is the Emacs daemon running?"; echo "Try: emacs --daemon"; read -p "Press Enter to close..."; }' _ %F
Icon=emacs
Type=Application
Terminal=true
Categories=Development;TextEditor;
Keywords=emacsclient;
