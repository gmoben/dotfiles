#!/bin/bash

function run_spleeter() {
    local model=2stems
    case "$1" in
        *stems) model=$1; shift;;
        *) ;;
    esac

    local audio_file="$@"

    echo "Audio file: $audio_file"
    echo "Model: $model"

    if [[ -n $model ]]; then
        model="-p spleeter:$model-16kHz"
    fi

    docker run \
           -v "$(pwd)/output:/output" \
           -v "$(pwd):/audio" \
           researchdeezer/spleeter \
           separate \
           -i "/audio/$audio_file" \
           -o /output $(echo $model)
}

run_spleeter $@
