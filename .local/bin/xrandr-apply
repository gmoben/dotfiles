#!/bin/bash

layout="$HOME/.screenlayout/$1.sh"
if [[ ! -f $layout ]]; then
    echo "ERROR: Layout does not exist ($layout)"
    return 1
fi

echo "Executing: xrandr $args"
eval $layout

echo "Restarting i3"
i3 restart || true

echo "Resetting nitrogen"
$(sleep 1 && [[ -f $HOME/.cache/wal/set_nitrogen.sh ]] && $HOME/.cache/wal/set_nitrogen.sh) &
