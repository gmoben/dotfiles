#!/bin/bash

emacs_theme=ewal-doom-one

source $HOME/.profile

reload_themes() {

    # If active tmux session, reload
    if (command -v tmux &>/dev/null && tmux list-sessions &>/dev/null); then
        tmux source-file $HOME/.tmux.conf
        echo "Reloaded tmux"
    fi

    # If active tmux session, reload
    if (command -v wemux &>/dev/null && wemux list-sessions &>/dev/null); then
        wemux source-file $HOME/.tmux.conf
        echo "Reloaded wemux"
    fi

    # If i3status-rust pywal theme was generated, update symlinks
    if [[ -f $HOME/.cache/wal/i3status-rust-theme.toml ]]; then
        mkdir -p $HOME/.config/i3status-rust/themes
        ln -sf $HOME/.cache/wal/i3status-rust-theme.toml $HOME/.config/i3status-rust/themes/pywal.toml
        echo "Updated i3status-rust theme symlink"
    fi

    # If i3status-rust pywal config was generated, copy it (not symlink, since dir is in dotfiles)
    if [[ -f $HOME/.cache/wal/i3status-rust-config.toml ]]; then
        cp $HOME/.cache/wal/i3status-rust-config.toml $HOME/.config/i3status-rust/config.toml
        echo "Updated i3status-rust config"
    fi

    # If i3 is running, restart to reload bar
    if (command -v i3 &>/dev/null); then
        i3 restart &>/dev/null
        echo "Restarted i3"
    fi

    # if [[ -e $HOME/.config/polybar/launch.sh ]]; then
    #     $HOME/.config/polybar/launch.sh
    # fi

    # If emacs daemon is running, reload theme
    if (ps -ef | grep emacs | grep daemon &>/dev/null); then
        emacsclient -e "(load-theme '$emacs_theme t)" &>/dev/null
        echo "Reloaded emacs theme ($emacs_theme)"
    fi
}

args=$@
[[ !($1 =~ $-) && -e $1 ]] && args="-i $@"

echo "wal $args"

(wal -n $args || wal $args) && reload_themes

if [[ ! $(uname -a) =~ microsoft ]]; then
    if [[ -f $HOME/.cache/wal/set_nitrogen.sh ]]; then
        chmod a+x $HOME/.cache/wal/set_nitrogen.sh
        ($HOME/.cache/wal/set_nitrogen.sh &)
        echo "Reset nitrogen"
    fi
fi

if [[ -f $HOME/.config/wal/wal-set-post ]]; then
    emacs_theme=$emacs_theme $HOME/.config/wal/wal-set-post &>/dev/null || true
fi

if [[ `command -v pywalfox` ]]; then
    pywalfox update 2>/dev/null || true
    echo "Reloaded pywalfox"
fi
