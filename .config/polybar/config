color5 = ${xrdb:color5:#800080}
color6 = ${xrdb:color6:#008080}
color7 = ${xrdb:color7:#c0c0c0}
color8 = ${xrdb:color8:#808080}
color9 = ${xrdb:color9:#ff0000}
